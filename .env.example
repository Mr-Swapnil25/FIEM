# ============================================================================
# EventEase Environment Configuration
# ============================================================================
# IMPORTANT: Copy this file to .env.local and fill in your actual values.
# For production, use environment variables set in Firebase/Vercel/etc.
# NEVER commit .env.local or .env.production with real credentials to git!
# ============================================================================

# ============================================================================
# FIREBASE CORE CONFIGURATION
# ============================================================================

# Get these values from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your-firebase-api-key-here

# Firebase App Check (optional, for production security)
# Get from Firebase Console > App Check > Apps > Get token
# Leave empty if not using App Check
VITE_APP_CHECK_KEY=
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-firebase-app-id
VITE_FIREBASE_MEASUREMENT_ID=G-your-measurement-id

# ============================================================================
# SECURITY KEYS
# ============================================================================

# QR Code HMAC Secret Key (REQUIRED for production)
# Generate a secure random string: openssl rand -hex 32
VITE_QR_SECRET_KEY=your-secure-random-key-here-minimum-32-chars

# ============================================================================
# FIRESTORE CONFIGURATION
# ============================================================================

# Firestore offline persistence
VITE_FIRESTORE_PERSISTENCE=true

# ============================================================================
# EMAIL DOMAIN RESTRICTION
# ============================================================================

# Format: firstname.lastname.year.division@teamfuture.in
VITE_ALLOWED_EMAIL_DOMAIN=@teamfuture.in

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable Firebase emulators for local development
VITE_USE_EMULATOR=false

# Emulator ports (if using emulators)
VITE_EMULATOR_AUTH_PORT=9099
VITE_EMULATOR_FIRESTORE_PORT=8080
VITE_EMULATOR_STORAGE_PORT=9199
VITE_EMULATOR_FUNCTIONS_PORT=5001

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable Google Sign-In
VITE_ENABLE_GOOGLE_SIGNIN=true

# Enable Apple Sign-In
VITE_ENABLE_APPLE_SIGNIN=true

# Enable QR code generation for tickets
VITE_ENABLE_QR_TICKETS=true

# Enable reviews feature
VITE_ENABLE_REVIEWS=true

# Enable payment processing
VITE_ENABLE_PAYMENTS=false

# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================

# Enable verbose logging for Firebase services
VITE_DEBUG_FIREBASE=false
