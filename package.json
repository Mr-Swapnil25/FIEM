{
  "name": "eventease",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze && npx vite-bundle-visualizer",
    "preview": "vite preview",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy:all": "npm run build && firebase deploy --only hosting,functions,firestore:rules,storage",
    "deploy:functions": "cd functions && npm run build && cd .. && firebase deploy --only functions",
    "emulators": "firebase emulators:start",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "firebase": "^12.7.0",
    "lucide-react": "^0.562.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "pureimage": "^0.4.18",
    "rollup-plugin-visualizer": "^5.12.0",
    "terser": "^5.36.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-bundle-visualizer": "^1.2.1"
  }
}
